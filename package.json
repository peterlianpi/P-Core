{
  "name": "p-core",
  "version": "2.0.0",
  "description": "Enhanced P-Core system with unified architecture, RLS security, and modern best practices",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx scripts/seed.ts",
    "db:reset": "tsx scripts/reset.ts"
    "db:push": "bunx prisma db push",
    "db:setup": "bun run db:generate && bun run db:migrate && bun run db:seed",
    "db:rls": "psql $DATABASE_URL -f lib/db/rls.sql",
    "test": "bunx vitest run",
    "test:watch": "bunx vitest watch",
    "test:ui": "bunx vitest --ui",
    "test:coverage": "bunx vitest run --coverage",
    "analyze": "ANALYZE=true bun run build",
    "bundle:analyze": "cross-env ANALYZE=true bun --bun next build && bunx @next/bundle-analyzer .next/analyze.html",
    "clean": "rimraf .next node_modules/.cache .bun",
    "perf:optimize": "bun scripts/performance-monitor.js optimize",
    "perf:clear": "bun scripts/performance-monitor.js clear",
    "perf:analyze": "bun scripts/performance-monitor.js analyze",
    "perf:measure": "bun scripts/performance-monitor.js measure",
    "perf:tips": "bun scripts/performance-monitor.js",
    "setup:bun": "bun scripts/setup-bun.js",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "seed": "bun run /prisma/seed"
  },
