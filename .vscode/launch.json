{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "P-Core: Next.js Development",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["--inspect"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "inspector",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/.next/**/*.js"]
    },
    {
      "name": "P-Core: Next.js Production Build",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["start"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "production"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "P-Core: Prisma Studio",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/prisma/build/index.js",
      "args": ["studio"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "P-Core: Run Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": ["run"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "test"
      }
    }
  ],
  "compounds": [
    {
      "name": "P-Core: Full Development Stack",
      "configurations": [
        "P-Core: Next.js Development",
        "P-Core: Prisma Studio"
      ],
      "stopAll": true
    }
  ]
}
