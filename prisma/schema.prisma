enum PurchaseStatus {
  PENDING
  COMPLETED
  CANCELLED
  REFUNDED

  @@schema("domain")
}

enum PaymentMethod {
  CASH
  CARD
  BANK_TRANSFER
  MOBILE_PAYMENT
  OTHER

  @@schema("domain")
}

// --- CHOIR MANAGEMENT MODELS ---
model Choir {
  id          String  @id @default(cuid())
  name        String
  description String? @db.Text
  isActive    Boolean @default(true) @map("is_active")

  // Multi-tenancy field (CRITICAL for RLS)
  orgId String @map("org_id")

  members   ChoirMember[]
  songs     Song[]
  events    ChoirEvent[]
  createdAt DateTime      @default(now()) @map("created_at")
  updatedAt DateTime      @updatedAt @map("updated_at")

  @@unique([name, orgId])
  @@index([orgId])
  @@index([isActive, orgId])
  @@map("choirs")
  @@schema("domain")
}

model ChoirMember {
  id       String            @id @default(cuid())
  choirId  String            @map("choir_id")
  memberId String            @map("member_id")
  voice    VoicePart?
  status   ChoirMemberStatus @default(ACTIVE)
  joinedAt DateTime          @default(now()) @map("joined_at")
  leftAt   DateTime?         @map("left_at")

  // Multi-tenancy field (CRITICAL for RLS)
  orgId String @map("org_id")

  choir     Choir    @relation(fields: [choirId], references: [id], onDelete: Cascade)
  member    Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([choirId, memberId, orgId])
  @@index([orgId])
  @@index([choirId])
  @@index([memberId])
  @@map("choir_members")
  @@schema("domain")
}

model Song {
  id       String  @id @default(cuid())
  title    String
  composer String?
  key      String?
  tempo    String?
  lyrics   String? @db.Text
  isActive Boolean @default(true) @map("is_active")

  // Multi-tenancy field (CRITICAL for RLS)
  orgId String @map("org_id")

  choirId   String   @map("choir_id")
  choir     Choir    @relation(fields: [choirId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([orgId])
  @@index([choirId])
  @@map("songs")
  @@schema("domain")
}

model ChoirEvent {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  eventDate   DateTime @map("event_date")
  location    String?

  // Multi-tenancy field (CRITICAL for RLS)
  orgId String @map("org_id")

  choirId   String   @map("choir_id")
  choir     Choir    @relation(fields: [choirId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([orgId])
  @@index([choirId])
  @@index([eventDate])
  @@map("choir_events")
  @@schema("domain")
}

// --- LIBRARY MANAGEMENT MODELS ---

// Core Library Model
model Library {
  id          String  @id @default(cuid())
  name        String  @db.VarChar(255)
  code        String? @db.VarChar(50) // Library code/identifier
  description String? @db.Text

  // Location Information
  address   String? @db.Text
  city      String? @db.VarChar(100)
  state     String? @db.VarChar(100)
  zipCode   String? @map("zip_code") @db.VarChar(20)
  country   String? @default("Myanmar") @db.VarChar(100)
  latitude  Float?
  longitude Float?

  // Contact Information
  phone   String? @db.VarChar(20)
  email   String? @db.VarChar(255)
  website String? @db.VarChar(255)

  // Library Details
  type      LibraryType @default(PUBLIC)
  capacity  Int? // Total capacity (number of people)
  floors    Int?        @default(1)
  totalArea Float?      @map("total_area") // in square meters

  // Operating Hours (JSON format for flexibility)
  operatingHours Json? @map("operating_hours") @db.Json

  // Library Rules and Policies
  loanPeriod      Int?     @default(14) @map("loan_period") // Default loan period in days
  maxRenewals     Int?     @default(2) @map("max_renewals")
  finePerDay      Decimal? @map("fine_per_day") @db.Decimal(10, 2)
  maxBooksPerUser Int?     @default(5) @map("max_books_per_user")

  // Status and Management
  isActive     Boolean @default(true) @map("is_active")
  isMainBranch Boolean @default(false) @map("is_main_branch")

  // Organization Relationship
  orgId        String       @map("org_id")
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  // Relationships
  books    Book[]
  sections LibrarySection[]
  staff    LibraryStaff[]

  // Audit Fields
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@unique([orgId, code])
  // Indexes for performance
  @@index([orgId])
  @@index([isActive])
  @@index([code])
  @@map("libraries")
  @@schema("domain")
}

// Library Types Enum
enum LibraryType {
  PUBLIC // Public library
  ACADEMIC // University/School library
  SCHOOL // K-12 school library
  SPECIAL // Special collections
  PRIVATE // Private library
  DIGITAL // Digital-only library
  RESEARCH // Research library

  @@schema("domain")
}

// Library Sections/Departments
model LibrarySection {
  id          String  @id @default(cuid())
  name        String  @db.VarChar(255)
  code        String? @db.VarChar(50)
  description String? @db.Text
  floor       Int?    @default(1)
  capacity    Int? // Number of books this section can hold

  // Library Relationship
  libraryId String  @map("library_id")
  library   Library @relation(fields: [libraryId], references: [id], onDelete: Cascade)

  // Organization Relationship  
  orgId        String       @map("org_id")
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  // Relationships
  books Book[]

  // Status
  isActive Boolean @default(true) @map("is_active")

  // Audit Fields
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([libraryId, code])
  // Indexes
  @@index([libraryId])
  @@index([orgId])
  @@index([isActive])
  @@map("library_sections")
  @@schema("domain")
}

// Library Staff Model
model LibraryStaff {
  id         String  @id @default(cuid())
  employeeId String? @map("employee_id") @db.VarChar(50)

  // Personal Information
  firstName String  @map("first_name") @db.VarChar(100)
  lastName  String  @map("last_name") @db.VarChar(100)
  email     String  @db.VarChar(255)
  phone     String? @db.VarChar(20)

  // Employment Details
  position   StaffPosition @default(LIBRARIAN)
  department String?       @db.VarChar(100)
  hireDate   DateTime      @map("hire_date")
  salary     Decimal?      @db.Decimal(10, 2)

  // Work Schedule
  workSchedule Json? @map("work_schedule") @db.Json

  // Access Permissions
  permissions      Json?   @db.Json
  canIssueBooks    Boolean @default(true) @map("can_issue_books")
  canManageBooks   Boolean @default(false) @map("can_manage_books")
  canManageMembers Boolean @default(false) @map("can_manage_members")

  // Library Relationship
  libraryId String  @map("library_id")
  library   Library @relation(fields: [libraryId], references: [id], onDelete: Cascade)

  // User Account Relationship (optional)
  userId String? @map("user_id")
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Organization Relationship
  orgId        String       @map("org_id")
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  // Status
  isActive Boolean @default(true) @map("is_active")

  // Audit Fields
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([orgId, employeeId])
  @@unique([libraryId, email])
  // Indexes
  @@index([libraryId])
  @@index([userId])
  @@index([orgId])
  @@index([email])
  @@index([employeeId])
  @@map("library_staff")
  @@schema("domain")
}

// Staff Position Enum
enum StaffPosition {
  LIBRARIAN // Professional librarian
  ASSISTANT_LIBRARIAN // Assistant librarian
  LIBRARY_TECHNICIAN // Library technician
  CLERK // Library clerk
  MANAGER // Library manager
  DIRECTOR // Library director
  VOLUNTEER // Volunteer staff
  STUDENT_ASSISTANT // Student worker

  @@schema("domain")
}

model Book {
  id          String    @id @default(cuid())
  title       String
  author      String
  isbn        String?
  category    String?
  publisher   String?
  publishedAt DateTime? @map("published_at")
  description String?   @db.Text
  total       Int       @default(1)
  available   Int       @default(1)
  isActive    Boolean   @default(true) @map("is_active")

  // Add constraint: available <= total AND available >= 0
  // This needs to be added in migration SQL

  // Library relationships
  libraryId String?  @map("library_id")
  library   Library? @relation(fields: [libraryId], references: [id], onDelete: SetNull)

  sectionId String?         @map("section_id")
  section   LibrarySection? @relation(fields: [sectionId], references: [id], onDelete: SetNull)

  // Multi-tenancy field (CRITICAL for RLS)
  orgId        String       @map("org_id")
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  loans     BookLoan[]
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  @@unique([isbn, orgId])
  @@index([orgId])
  @@index([libraryId])
  @@index([sectionId])
  @@index([isActive, orgId])
  @@map("books")
  @@schema("domain")
}

model BookLoan {
  id         String         @id @default(cuid())
  bookId     String         @map("book_id")
  memberId   String         @map("member_id")
  studentId  String?        @map("student_id")
  loanDate   DateTime       @default(now()) @map("loan_date")
  dueDate    DateTime       @map("due_date")
  returnDate DateTime?      @map("return_date")
  status     BookLoanStatus @default(ACTIVE)
  notes      String?        @db.Text

  // Multi-tenancy field (CRITICAL for RLS)
  orgId String @map("org_id")

  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  member    Member?  @relation(fields: [memberId], references: [id], onDelete: Cascade)
  student   Student? @relation(fields: [studentId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([orgId])
  @@index([bookId])
  @@index([memberId])
  @@index([studentId])
  @@index([status, orgId])
  @@map("book_loans")
  @@schema("domain")
}

